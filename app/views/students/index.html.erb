<div id="modal"></div>
<%= link_to 'New Student', new_modal_students_path(format: :js), class:"btn btn-success", style:"float: right;margin-bottom: 3px;", type: :button, remote: true %>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Subject</th>
      <th scope="col">Mark</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%@students.each do |student|%>
      <tr>
        <td><%=student.name.titleize%></td>
        <td><%=student.subject.titleize%></td>
        <td><%=student.mark%></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary btn-sm  dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              :
            </button>
            <div class="dropdown-menu">
            
              <%= link_to 'Edit', edit_modal_student_path(id: student.id, format: :js), class:"dropdown-item", remote: true %>
              <%= link_to 'Delete', student_path(student), class: 'dropdown-item', method: :delete %>
            </div>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>

<%= will_paginate @students, renderer: BootstrapPagination::Rails %>
